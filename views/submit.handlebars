<h2>Submit Your Feedback</h2>

{{#if errors}}
  <ul class="error-list">
    {{#each errors}}
      <li>{{this.msg}}</li>
    {{/each}}
  </ul>
{{/if}}

<form method="POST" action="/submit">
  <label>Your Name</label>
  <input type="text" name="name" placeholder="Your Name" value="{{formData.name}}" />

  <label>Your Email</label>
  <input type="email" name="email" placeholder="Your Email" value="{{formData.email}}" />

  <label>Your Feedback</label>
  <textarea name="message" placeholder="Share your thoughts here">{{formData.message}}</textarea>

  <button type="submit">Submit</button>
</form>
<br>
<a href="/testimonials">View All Feedback</a>
